#include "../../imports/stdlib.fc";

(int, int, int) load_data() {
    slice ds = get_data().begin_parse();
    slice rs = ds~load_ref().begin_parse();
    return (
        rs~load_coins(),
        rs~load_coins(),
        rs~load_coins()
    );
}

() save_data(int c1, int c2, int c3) impure {
    cell inner_cell = begin_cell()
        .store_coins(c1)
        .store_coins(c2)
        .store_coins(c3)
        .end_cell();
    set_data(
        begin_cell()
        .store_ref(inner_cell)
        .end_cell()
    );
}

() recv_internal(slice in_msg) {
    int i = 0;
    while (i < 2) {
        (int c1, int c2, int c3) = load_data();
        int add = in_msg~load_coins();

        if ((c1 <= c2) & (c1 <= c3)) {
            c1 += add;
        } else {
            if ((c2 <= c1) & (c2 <= c3)) {
                c2 += add;
            } else {
                c3 += add;
            }
        }

        save_data(c1, c2, c3);
        i += 1;
    }

    (int c1, int c2, int c3) = load_data();
    throw_unless(1000, c1 + c2 + c3 == 12040);
}
